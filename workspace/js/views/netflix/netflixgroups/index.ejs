<% include ../../partials/header.ejs %>

<div class="container">
	<header class="jumbotron">
        <h1>Find Your Group!</h1>
        <h4> Split the cost of a variety of web based services </h4>
        <p><a class= "btn btn-primary btn-large" href="/netflix/new">Add Your New Group</a></p>
	</header>

  <div class="row text-center flex-wrap">
            <% netflixKappa.forEach(function(netflixer){ %>   <!--Logic, call back anon function-->
            <div class="col-md-3 col-sm-6">
  		        <div class="thumbnail"> <!--Occupies 1/3 of the window (on medium and large screens)-->
			        <div class="w3-card">
  				        <div class="w3-container">
  				          <h7><%=netflixer.name%></h7>
  				          <br></br>
  				          <img class="img-responsive" src="<%= netflixer.image %>">
  				          <h5><%=netflixer.description.substring(0,50)%>...</h5
  				          <p><a href="/netflix/<%= netflixer._id %>" class="btn btn-primary">View more info!</a></p>
  				        </div>
			        </div>
  		        </div>
  		    </div>
            <% }); %>
    </div>
</div>
<% include ../../partials/footer.ejs %>


